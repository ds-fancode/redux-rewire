{
  "compilerOptions": {
    "incremental": true,
    "rootDir": "src",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "newLine": "LF",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "skipLibCheck": true, // Verify
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "lib": ["es2020", "dom", "ScriptHost"],
    "target": "ES2015",
    "module": "ES2020",
    "declaration": true,
    "outDir": "lib/esm",
    "strict": true,
    "paths": {
      "src/*": ["src/*"]
    },
  },
  "include": ["src"],
  "exclude": [
    "**/__tests__/*",
    "node_modules",
    "dist"
  ]
}
